<resources>

    <!-- app主题 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/color_white</item>
        <item name="colorControlHighlight">@color/color_white</item>
        <item name="actionBarSize">@dimen/title_height</item>
    </style>

    <!--actionbar 主题-->
    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 标题栏标题文字 -->
    <style name="top_title_text">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color_33</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- 标题栏标题文字 -->
    <style name="top_right_text">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/color_33</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- 首页底部切换按钮 -->
    <style name="menu_button_style">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/transparent_00</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- MyCalendar 月份文字 -->
    <style name="my_Calendar_month">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_66</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- MyCalendar 上一月下一月按钮 -->
    <style name="my_Calendar_button">
        <item name="android:layout_height">@dimen/my_calendar_button_size</item>
        <item name="android:layout_width">@dimen/my_calendar_button_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- MyCalendar 星期文字 -->
    <style name="my_Calendar_week_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_33</item>
    </style>

    <!-- 横向线条 -->
    <style name="line_horizontal">
        <item name="android:background">@color/color_dc</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <!-- 纵向线条 -->
    <style name="line_vertical">
        <item name="android:background">@color/color_dc</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">1dp</item>
    </style>

    <!--没有间隔虚线 -->
    <style name="comment_list_view_style_2">
        <item name="android:divider">@null</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:cacheColorHint">@color/transparent_00</item>
    </style>

    <!--用户名与密码-->
    <style name="login_username">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/color_white</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/login_hint_size</item>
        <item name="android:paddingRight">@dimen/login_username_right</item>
    </style>

    <!--订单详情TextView-->
    <style name="order_detail_text_view">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_88</item>
    </style>

    <!--确认，取消-->
    <style name="dialog_proving">
        <item name="android:textColor">@color/color_33</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dialog_positive_size</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- 对话框主题 -->
    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--对话框样式-->
    <style name="add_dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_shape_white</item>
        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 -->
    </style>

    <style name="dialog_wait" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_progress</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
